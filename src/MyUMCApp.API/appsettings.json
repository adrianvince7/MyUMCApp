{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=myumc.db"
  },
  "JwtSettings": {
    "SecretKey": "MyUMCApp-Super-Secret-JWT-Key-For-Production-Change-This-2024!",
    "Issuer": "MyUMCApp",
    "Audience": "MyUMCApp-Users",
    "ExpirationHours": 24
  },
  "AllowedOrigins": "http://localhost:5000,https://localhost:5001,http://localhost:3000",
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      { 
        "Name": "File",
        "Args": {
          "path": "logs/myumc-api-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
